<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFCFD">

    <ImageButton
        android:id="@+id/bottlebtn"
        android:layout_width="155dp"
        android:layout_height="298dp"
        android:layout_marginStart="56dp"
        android:background="#FBFCFD"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/glassbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottle1" />

    <ImageButton
        android:id="@+id/glassbtn"
        android:layout_width="110dp"
        android:layout_height="161dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FBFCFD"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toEndOf="@+id/bottlebtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698"
        app:srcCompat="@drawable/glass1" />

    <ProgressBar
        android:id="@+id/waterCounter"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="382dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:progressBackgroundTint="#add8e6"
        android:progressTint="#0091ea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/countertext"
        android:layout_width="82dp"
        android:layout_height="36dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="472dp"
        android:fontFamily="monospace"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="99dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="500 ml"
        android:textColor="#010203"
        app:layout_constraintBottom_toBottomOf="@+id/bottlebtn"
        app:layout_constraintEnd_toEndOf="@+id/bottlebtn"
        app:layout_constraintStart_toStartOf="@+id/bottlebtn"
        app:layout_constraintTop_toTopOf="@+id/bottlebtn"
        app:layout_constraintVertical_bias="0.602" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="109dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="200 ml"
        android:textColor="#010203"
        app:layout_constraintBottom_toBottomOf="@+id/glassbtn"
        app:layout_constraintEnd_toEndOf="@+id/glassbtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/glassbtn"
        app:layout_constraintTop_toTopOf="@+id/glassbtn" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="79dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="472dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/countertext"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/resetbtn"
        android:layout_width="71dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.603"
        app:srcCompat="@drawable/newreset" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="72dp"
        android:layout_height="27dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Goal"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Consumed"
        app:layout_constraintBottom_toTopOf="@+id/countertext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.626"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>